{
  "Comment": "ISM Control Processing Workflow with Email Notification",
  "StartAt": "CreateJob",
  "States": {
    "CreateJob": {
      "Type": "Task",
      "Resource": "${CreateJobLambdaArn}",
      "Parameters": {
        "job_id.$": "$.job_id",
        "filename.$": "$.filename",
        "url.$": "$.url",
        "s3_key.$": "$.s3_key",
        "email.$": "$.email",
        "execution_arn.$": "$$.Execution.Name"
      },
      "ResultPath": "$.jobDetails",
      "Next": "UpdateProgressProcessingJSON"
    },
    "UpdateProgressProcessingJSON": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:updateItem",
      "Parameters": {
        "TableName": "${JobsTableName}",
        "Key": {
          "job_id": {"S.$": "$.jobDetails.job_id"}
        },
        "UpdateExpression": "SET current_step = :step, progress_percentage = :progress",
        "ExpressionAttributeValues": {
          ":step": {"S": "Processing JSON file"},
          ":progress": {"N": "10"}
        }
      },
      "ResultPath": null,
      "Next": "ProcessJSON"
    },
    "ProcessJSON": {
      "Type": "Task",
      "Resource": "${ProcessJsonLambdaArn}",
      "Parameters": {
        "job_id.$": "$.jobDetails.job_id",
        "s3_key.$": "$.s3_key",
        "bucket_name": "${BucketName}"
      },
      "ResultPath": "$.processingResult",
      "Catch": [{
        "ErrorEquals": ["States.ALL"],
        "ResultPath": "$.error",
        "Next": "UpdateJobFailed"
      }],
      "Next": "UpdateProgressProcessingControls"
    },
    "UpdateProgressProcessingControls": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:updateItem",
      "Parameters": {
        "TableName": "${JobsTableName}",
        "Key": {
          "job_id": {"S.$": "$.jobDetails.job_id"}
        },
        "UpdateExpression": "SET current_step = :step, progress_percentage = :progress, total_controls = :total",
        "ExpressionAttributeValues": {
          ":step": {"S": "Processing controls with AI"},
          ":progress": {"N": "20"},
          ":total": {"N.$": "States.JsonToString($.processingResult.controls_count)"}
        }
      },
      "ResultPath": null,
      "Next": "ProcessControls"
    },
    "ProcessControls": {
      "Type": "Map",
      "ItemsPath": "$.processingResult.controls",
      "MaxConcurrency": 100,
      "Iterator": {
        "StartAt": "ProcessSingleControl",
        "States": {
          "ProcessSingleControl": {
            "Type": "Task",
            "Resource": "${ControlProcessorLambdaArn}",
            "End": true
          }
        }
      },
      "ResultPath": "$.controlResults",
      "Catch": [{
        "ErrorEquals": ["States.ALL"],
        "ResultPath": "$.error",
        "Next": "UpdateJobFailed"
      }],
      "Next": "UpdateJobCompleted"
    },
    "UpdateJobCompleted": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:updateItem",
      "Parameters": {
        "TableName": "${JobsTableName}",
        "Key": {
          "job_id": {"S.$": "$.jobDetails.job_id"}
        },
        "UpdateExpression": "SET #status = :status, controls_dispatched = :count, current_step = :step, progress_percentage = :progress",
        "ExpressionAttributeNames": {
          "#status": "status"
        },
        "ExpressionAttributeValues": {
          ":status": {"S": "processing"},
          ":count": {"N.$": "States.JsonToString($.processingResult.controls_count)"},
          ":step": {"S": "Initializing conformance packs"},
          ":progress": {"N": "50"}
        }
      },
      "ResultPath": "$.updateResult",
      "Next": "InitializeConformancePacks"
    },
    "InitializeConformancePacks": {
      "Type": "Task",
      "Resource": "${ConformancePackInitializerLambdaArn}",
      "Parameters": {
        "job_id.$": "$.jobDetails.job_id",
        "prefix": "ism-controls",
        "batch_size": 50
      },
      "ResultPath": "$.conformancePackInit",
      "Catch": [{
        "ErrorEquals": ["States.ALL"],
        "ResultPath": "$.conformancePackError",
        "Next": "SendSuccessNotification"
      }],
      "Next": "UpdateProgressProcessingBatches"
    },
    "UpdateProgressProcessingBatches": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:updateItem",
      "Parameters": {
        "TableName": "${JobsTableName}",
        "Key": {
          "job_id": {"S.$": "$.jobDetails.job_id"}
        },
        "UpdateExpression": "SET current_step = :step, progress_percentage = :progress",
        "ExpressionAttributeValues": {
          ":step": {"S": "Processing conformance pack batches"},
          ":progress": {"N": "60"}
        }
      },
      "ResultPath": null,
      "Next": "ProcessConformancePackBatches"
    },
    "ProcessConformancePackBatches": {
      "Type": "Map",
      "ItemsPath": "$.conformancePackInit.batches",
      "MaxConcurrency": 10,
      "Parameters": {
        "job_id.$": "$.conformancePackInit.job_id",
        "batch_id.$": "$$.Map.Item.Value.batch_id",
        "docs_s3_key.$": "$.conformancePackInit.docs_s3_key",
        "rules.$": "$$.Map.Item.Value.rules"
      },
      "Iterator": {
        "StartAt": "ProcessSingleBatch",
        "States": {
          "ProcessSingleBatch": {
            "Type": "Task",
            "Resource": "${ConformancePackBatchProcessorLambdaArn}",
            "End": true
          }
        }
      },
      "ResultPath": "$.batchResults",
      "Catch": [{
        "ErrorEquals": ["States.ALL"],
        "ResultPath": "$.conformancePackError",
        "Next": "SendSuccessNotification"
      }],
      "Next": "UpdateProgressAggregating"
    },
    "UpdateProgressAggregating": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:updateItem",
      "Parameters": {
        "TableName": "${JobsTableName}",
        "Key": {
          "job_id": {"S.$": "$.jobDetails.job_id"}
        },
        "UpdateExpression": "SET current_step = :step, progress_percentage = :progress",
        "ExpressionAttributeValues": {
          ":step": {"S": "Generating YAML files and HTML report"},
          ":progress": {"N": "80"}
        }
      },
      "ResultPath": null,
      "Next": "AggregateConformancePacks"
    },
    "AggregateConformancePacks": {
      "Type": "Task",
      "Resource": "${ConformancePackAggregatorLambdaArn}",
      "Parameters": {
        "initResult.$": "$.conformancePackInit"
      },
      "ResultPath": "$.conformancePackResult",
      "Catch": [{
        "ErrorEquals": ["States.ALL"],
        "ResultPath": "$.conformancePackError",
        "Next": "UpdateProgressSendingNotification"
      }],
      "Next": "UpdateProgressSendingNotification"
    },
    "UpdateProgressSendingNotification": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:updateItem",
      "Parameters": {
        "TableName": "${JobsTableName}",
        "Key": {
          "job_id": {"S.$": "$.jobDetails.job_id"}
        },
        "UpdateExpression": "SET current_step = :step, progress_percentage = :progress",
        "ExpressionAttributeValues": {
          ":step": {"S": "Sending notification"},
          ":progress": {"N": "90"}
        }
      },
      "ResultPath": null,
      "Next": "SendSuccessNotification"
    },
    "UpdateJobFailed": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:updateItem",
      "Parameters": {
        "TableName": "${JobsTableName}",
        "Key": {
          "job_id": {"S.$": "$.jobDetails.job_id"}
        },
        "UpdateExpression": "SET #status = :status, error_message = :error, failed_at = :failed, current_step = :step",
        "ExpressionAttributeNames": {
          "#status": "status"
        },
        "ExpressionAttributeValues": {
          ":status": {"S": "failed"},
          ":error": {"S.$": "$.error.Cause"},
          ":failed": {"S.$": "$$.State.EnteredTime"},
          ":step": {"S": "Failed"}
        }
      },
      "ResultPath": "$.updateResult",
      "Next": "SendFailureNotification"
    },
    "SendSuccessNotification": {
      "Type": "Task",
      "Resource": "${SendNotificationLambdaArn}",
      "Parameters": {
        "email.$": "$.jobDetails.email",
        "subject": "ISM Control Processing Complete",
        "message.$": "States.Format('Success! Processed {} controls from file: {}', $.processingResult.controls_count, $.jobDetails.filename)",
        "conformancePackResult.$": "$.conformancePackResult",
        "bucket_name": "${BucketName}"
      },
      "ResultPath": "$.notificationResult",
      "Next": "MarkJobCompleted"
    },
    "MarkJobCompleted": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:updateItem",
      "Parameters": {
        "TableName": "${JobsTableName}",
        "Key": {
          "job_id": {"S.$": "$.jobDetails.job_id"}
        },
        "UpdateExpression": "SET #status = :status, current_step = :step, progress_percentage = :progress, completed_at = :completed",
        "ExpressionAttributeNames": {
          "#status": "status"
        },
        "ExpressionAttributeValues": {
          ":status": {"S": "completed"},
          ":step": {"S": "Completed"},
          ":progress": {"N": "100"},
          ":completed": {"S.$": "$$.State.EnteredTime"}
        }
      },
      "End": true
    },
    "SendFailureNotification": {
      "Type": "Task",
      "Resource": "${SendNotificationLambdaArn}",
      "Parameters": {
        "email.$": "$.jobDetails.email",
        "subject": "ISM Control Processing Failed",
        "message.$": "States.Format('Processing failed for file: {}. Error: {}', $.jobDetails.filename, $.error.Cause)"
      },
      "End": true
    }
  }
}
